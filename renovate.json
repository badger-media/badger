{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergeLinters",
    ":automergePatch",
    ":automergePr",
    ":prHourlyLimit4",
    "monorepo:prisma"
  ],
  "postUpdateOptions": ["yarnDedupeHighest"],
  "packageRules": [
    {
      "extends": ["monorepo:nextjs"],
      "automerge": false
    },
    {
      "matchPackagePrefixes": ["@radix-ui/"],
      "groupName": "Radix UI"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    }
  ]
}
